<%- include('header') -%>

<div class="text-center center-div" id="login">
  <div class="container w-25 py-5">
    <div class="title pb-5">
      <h2 class="font-weight-bold">Login System</h2>
      <div id="loginTxt">Already have an account?</div>
      <% if (locals.logout) { %>
      <span id="alertBox" class="alert alert-success text-center">
        <%= logout %>
      </span>
      <% } %>
    </div>
    <form action="/route/login" method="post" class="pt-3">
      <div class="form-group">
        <input
          type="email"
          name="email"
          id=""
          class="form-control"
          placeholder="Enter email"
        />
        <small class="form-text text-warning text-left"
          >Register email address</small
        >
      </div>
      <div class="form-group">
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="Enter password"
        />
      </div>
      <button type="submit" class="btn btn-success rounded-pill">Submit</button>
    </form>
  </div>
</div>

<%- include('footer') -%>
